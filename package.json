{
	"name": "@asymmetrik/ngx-leaflet-d3",
	"artifactName": "ngx-leaflet-d3",
	"moduleName": "ngxLeafletD3",
	"description": "Angular.io D3 visualization components for Leaflet",
	"version": "2.0.0",
	"author": "Asymmetrik, Ltd.",
	"copyright": "Copyright Asymmetrik, Ltd. 2007-2017 - All Rights Reserved.",
	"license": "MIT",

	"main": "dist/bundles/ngx-leaflet-d3.js",
	"module": "dist/index.js",
	"jsnext:main": "dist/index.js",
	"typings": "dist/index.d.ts",

	"repository": {
		"type": "git",
		"url": "https://github.com/Asymmetrik/ngx-leaflet-d3.git"
	},

	"scripts": {
		"build": "npm run compile && npm run bundle",
		"prebuild": "npm run lint",
		"demo": "(webpack-dev-server & npm run watch)",
		"predemo": "npm run lint",

		"bundle": "npm run rollup && npm run uglify",
		"compile": "ngc -p tsconfig-aot.json",
		"lint": "tslint -c tslint.json -t stylish 'src/**/*.ts'",
		"rollup": "rollup -c rollup.config.js",
		"uglify": "uglifyjs --comments 'license' -o ./dist/bundles/ngx-template.min.js -- ./dist/bundles/ngx-template.js",
		"watch": " watch 'npm run lint' ./src"
	},

	"peerDependencies": {
		"@angular/core": ">=6",
		"@angular/common": ">=6",

		"d3": "5",
		"d3-hexbin": "0.2",
		"leaflet": "1",

		"@asymmetrik/leaflet-d3": "3",
		"@asymmetrik/ngx-leaflet": "4"
	},

	"devDependencies": {
		"@angular/common": "6",
