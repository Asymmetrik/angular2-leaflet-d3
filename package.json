		"core-js": "2.5",
		"rxjs": "6",
		"zone.js": "0.8",
		"@types/node": "8",

		"typescript": "2.7",
		"tslint": "5",

		"rollup": "0.62",
		"uglify-js": "3",

		"webpack": "4",
		"webpack-cli": "3",
		"webpack-dev-server": "3",
